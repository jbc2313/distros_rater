---
import Header from "../components/Header.astro";
import TierList from "../components/TierList.astro";
---

<html>
    <div><Header/></div>
    <div>
        <h1 id="Greet">Lets rate all the distros we know on a tier list!</h1>
    </div>
    <div><TierList/></div>
    <div id="ButtonDiv">
        <button id="RateButton">Rate Distro</button>
    </div>
    <dialog id="pageDialogue">
        <div>
            <form>
            <div>
                <input id="DistroInput" list="distros" name="distro"/>
                <datalist id="distros">
                    <option value="Debian"/>
                    <option value="Ubuntu" />
                    <option value="Kubuntu" />
                    <option value="Fedora" />
                    <option value="Arch" />
                    <option value="Gentoo" />
                    <option value="Mint" />
                    <option value="Elementary" />
                </datalist>
                <input id="DistroRank" list="ranks" name="rank" />
                <datalist id="ranks">
                    <option value="S" />
                    <option value="A" />
                    <option value="B" />
                    <option value="C" />
                    <option value="D" />
                    <option value="F" /> 
                </datalist>
            </div>
            <div>
                <button id="dialogSubmit" type="submit">Submit</button>
                <button formmethod="dialog" id="closeDialog">Close</button>
            </div>
            <form/>
        </div>
    </dialog>
</html>
<script src="../scripts/distroscript.ts"></script>

<style>
   
   html, body {
        margin: 0; 
   }

    #Greet {
        text-align: center;
    }

    #RateButton {
        height: 40px;
        width: 80px;
        margin: auto;
    }

    #ButtonDiv {
        display: flex;
        margin: 40px;
        justify-content: center;
    }


</style>
